{
    "private": "true",
    "dependencies": {
        "@tsndr/cloudflare-worker-jwt": "^3.1.2",
        "cookie": "^1.0.1",
        "resend": "^4.0.1-alpha.0",
        "trouter": "^4.0.0",
        "use-debounce": "^10.0.4"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20241011.0",
        "@types/react": "^18.3.11",
        "clsx": "^2.1.1",
        "esbuild": "^0.24.0",
        "npm-run-all": "^4.1.5",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tailwindcss": "^3.4.14",
        "tschema": "^3.2.0",
        "wrangler": "^3.81.0"
    },
    "scripts": {
        "start": "run-p watch-client watch-style dev",
        "watch-client": "esbuild src/client.tsx --bundle --outfile=public/client.js --jsx=automatic --watch --minify --sourcemap=external",
        "watch-style": "npx tailwindcss -i ./src/style.css -o ./public/style.css --watch --minify",
        "dev": "npx wrangler dev --port 3000",
        "migrate": "npx wrangler d1 execute DB --local --file=./schema.sql",
        "deploy": "npx wrangler deploy --minify"
    }
}
